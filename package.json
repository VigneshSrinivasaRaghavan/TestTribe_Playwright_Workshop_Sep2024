{
  "name": "testtribe_playwright_workshop_sep2024",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rimraf allure-report allure-results && mkdirp allure-report allure-results",
    "generate:reports": "npx allure generate ./allure-results --clean",
    "open:reports": "npx allure open ./allure-report",
    "pretest": "npm run clean:reports",
    "posttest": "npm run generate:reports",
    "chromium": "npx playwright test tests/buttonHandling.spec.ts --project=chromium",
    "firefox": "npx playwright test tests/buttonHandling.spec.ts --project=firefox",
    "webkit": "npx playwright test tests/buttonHandling.spec.ts --project=webkit",
    "test:chromium": "npm run chromium || npm run posttest",
    "test:firefox": "npm run firefox|| npm run posttest",
    "test:webkit": "npm run webkit || npm run posttest"
  },
  "keywords": [],
