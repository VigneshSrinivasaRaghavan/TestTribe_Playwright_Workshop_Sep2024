    "@playwright/test": "^1.47.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.5.5",
    "allure-commandline": "^2.30.0",
    "allure-playwright": "^3.0.4",
    "csv-parse": "^5.5.6",
    "luxon": "^3.5.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1"
  }
}
